<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_16"
    android:background="@drawable/linear_shape"
    >

    <ImageView
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_margin="@dimen/margin_12"
        android:src="@drawable/person"
       />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        >

        <TextView
            style="@style/headlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_snans_bold"
            android:text="@string/ahmed_hassan"
            android:textColor="@color/black"
            android:textFontWeight="700"
            />

        <TextView
            style="@style/bodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_8"
            android:fontFamily="@font/dm_scans_mediam"
            android:text="@string/engineer"
            android:textColor="@color/grey87"
            android:textFontWeight="500"
            />

        <TextView
            style="@style/uk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_scans_mediam"
            android:textFontWeight="400"
            android:text="@string/uk"
            android:layout_marginBottom="@dimen/margin_8"
            android:drawableStart="@drawable/ic_location"
            android:gravity="start"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_11"
            >

            <TextView
                style="@style/bodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_scans_mediam"
                android:text="@string/_150_reviews"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:layout_marginEnd="@dimen/margin_8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate"
                android:textColor="@color/black"
                style="@style/uk"
                android:fontFamily="@font/dm_scans_mediam"
                android:textFontWeight="500"
                android:drawablePadding="@dimen/margin_4"
                app:drawableEndCompat="@drawable/ic_star"
                />
        </LinearLayout>

    </LinearLayout>

    <Space
    android:layout_width="0dp"
    android:layout_height="wrap_content"
        android:layout_weight="1"
     />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_8"
        android:orientation="vertical"
        android:gravity="end"
        >

        <TextView
            style="@style/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_bk"
            android:text="@string/_3_hr"
            android:textColor="@color/white"
            android:fontFamily="@font/dm_scans_mediam"
            android:textFontWeight="400"
            />

        <TextView
            style="@style/bodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/russian"
            android:textColor="@color/grey87"
            android:fontFamily="@font/dm_scans_mediam"
            android:textFontWeight="500"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            />

        <TextView
            style="@style/bodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days_ago"
            android:textColor="@color/grey38"
            android:fontFamily="@font/dm_scans_mediam"
           android:textFontWeight="400"
            />

    </LinearLayout>

</LinearLayout>
